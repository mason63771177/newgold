# 环境配置
NODE_ENV=development
PORT=3000
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
HTTPS_PORT=443
HOST=localhost

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=gold7_game

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 业务配置
ACTIVATION_AMOUNT=100
COUNTDOWN_HOURS=168
REDPACKET_TIMES=09:00,12:00,20:00
REDPACKET_DURATION=77

# Tatum API 配置 - 请在 https://tatum.io 注册获取API密钥
TATUM_API_KEY=your-tatum-api-key-here
TATUM_NETWORK=tron-testnet
TATUM_ENVIRONMENT=testnet
# 生产环境请设置为: TATUM_NETWORK=tron-mainnet, TATUM_ENVIRONMENT=mainnet

# TRC20 USDT 配置
# 测试网 USDT 合约地址
USDT_CONTRACT_ADDRESS=TG3XXyExBkPp9nzdajDZsozEu4BkaSJozs
# 生产环境 USDT 合约地址: TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# 主钱包配置 - 请妥善保管助记词和私钥
MASTER_WALLET_MNEMONIC=your-master-wallet-mnemonic-here
MASTER_WALLET_ADDRESS=your-master-wallet-address-here

# 手续费配置
CUSTOMER_FIXED_FEE=2.0
CUSTOMER_PERCENTAGE_FEE_MIN=0.01
CUSTOMER_PERCENTAGE_FEE_MAX=0.05

# 加密密钥 - 用于加密存储的私钥
ENCRYPTION_KEY=your-32-character-encryption-key

# 区块链配置 (兼容旧版)
TRON_API_KEY=your-tron-api-key

# 监控配置
ENABLE_MONITORING=true
MONITORING_PORT=3001

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log