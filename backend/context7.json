{
  "name": "H5游戏化金融产品后端系统",
  "version": "1.0.0",
  "description": "基于Node.js的H5游戏化金融产品后端API系统，支持用户管理、钱包功能、任务系统、红包系统等",
  "type": "backend-api",
  "framework": "express",
  "language": "javascript",
  "context7": {
    "specification": "1.0",
    "compliance": true,
    "standards": {
      "code_style": "standardjs",
      "documentation": "jsdoc",
      "testing": "jest",
      "logging": "winston"
    }
  },
  "architecture": {
    "pattern": "MVC",
    "structure": {
      "controllers": "业务逻辑控制器",
      "models": "数据模型层",
      "routes": "路由定义",
      "services": "业务服务层",
      "middleware": "中间件",
      "config": "配置文件",
      "utils": "工具函数"
    }
  },
  "apis": {
    "base_url": "http://localhost:3000/api",
    "authentication": "JWT Token",
    "endpoints": {
      "auth": "/auth/*",
      "user": "/user/*",
      "wallet": "/wallet/*",
      "tasks": "/tasks/*",
      "redpacket": "/redpacket/*",
      "ranking": "/ranking/*",
      "admin": "/admin/*"
    }
  },
  "database": {
    "type": "mysql",
    "connection_pool": true,
    "migrations": "scripts/",
    "models": "models/"
  },
  "security": {
    "authentication": "JWT",
    "authorization": "Role-based",
    "encryption": "bcrypt",
    "rate_limiting": true,
    "cors": true
  },
  "monitoring": {
    "logging": {
      "level": "info",
      "format": "json",
      "rotation": "daily",
      "directory": "logs/"
    },
    "performance": {
      "enabled": true,
      "metrics": ["response_time", "memory_usage", "cpu_usage"]
    }
  },
  "deployment": {
    "environment": "production",
    "port": 3000,
    "ssl": false,
    "clustering": false
  },
  "dependencies": {
    "runtime": {
      "express": "^4.18.0",
      "mysql2": "^3.6.0",
      "jsonwebtoken": "^9.0.0",
      "bcryptjs": "^2.4.3",
      "cors": "^2.8.5",
      "dotenv": "^16.0.0"
    },
    "development": {
      "nodemon": "^3.0.0",
      "jest": "^29.0.0"
    }
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "init-db": "node scripts/init-database.js"
  },
  "documentation": {
    "api_docs": "docs/api/",
    "code_examples": "examples/",
    "best_practices": "docs/best-practices.md",
    "changelog": "CHANGELOG.md"
  }
}